<h1>ブログ一覧</h1>

<table>
  <tr>
    <th>投稿者</th>
    <th>タイトル</th>
    <th>内容</th>
    <th>投稿日時</th>
    <th>更新日時</th>
  </tr>

<% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.user.name %></td>
    <td><%= blog.title %></td>
    <td><%= blog.content %></td>
    <td><%= blog.created_at.strftime('%m月%d日 %H:%M') %></td>
    <td><%= blog.updated_at.strftime('%m月%d日 %H:%M') %></td>
    <td><%= link_to 'ブログ詳細へ', blog_path(blog.id) %></td>
  </tr>
<% end %>
</table>

<%= link_to 'ブログ投稿', new_blog_path %>
