<h1>ブログ詳細</h1>
<%= @blog.user.name %>
<%= @blog.title %>
<%= @blog.content %>
<%= @blog.created_at.strftime('%m月%d日 %H:%M') %>
<%= @blog.updated_at.strftime('%m月%d日 %H:%M') %>

<% if @blog.user.id == current_user.id %>
  <%= link_to 'ブログ編集', edit_blog_path(@blog.id) %>
  <%= link_to '削除', blog_path(@blog.id), method: :delete,data: { confirm: '本当に削除しますか？' } %>
<% end %>

<% unless @blog.user_id == current_user.id %>
  <% if @favorite.present? %>
    <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', favorites_path(blog_id: @blog.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>
