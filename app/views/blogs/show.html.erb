<h1>ブログ詳細</h1>
<%= @blog.user.name %>
<%= @blog.title %>
<%= @blog.content %>
<%= @blog.created_at.strftime('%m月%d日 %H:%M') %>
<%= @blog.updated_at.strftime('%m月%d日 %H:%M') %>

<% if @blog.user.id == current_user.id %>
  <%= link_to 'ブログ編集', edit_blog_path(@blog.id) %>
  <%= link_to '削除', blog_path(@blog.id), method: :delete,data: { confirm: '本当に削除しますか？' } %>
<% end %>

<div id = "favorite_area">
  <%= render partial: 'favorites/favorite', locals: { favorite: @favorite, blog: @blog } %>
</div>

<div id="comments_area">
  <%= render partial: 'comments/index', locals: { comments: @comments, blog: @blog } %>
</div>

<%= render partial: 'comments/form', locals: { comment: @comment, blog: @blog } %>
